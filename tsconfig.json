{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "paths": {
      "src/*": ["./src/*"]
    },
    "target": "ES2020",
    "lib": ["ES2020", "ESNext", "ESNext.AsyncIterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "declaration": true,
  },
  "include": ["src", "src/typechain-types"],
  "exclude": [
    "build",
    "node_modules"
  ]
}
